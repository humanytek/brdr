<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="sale_order">
            <t t-call="web.report_layout">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.partner_id.lang"/>
                    <t t-set="style" t-value="doc.style or res_company.df_style or user.env.ref('customized_invoice.df_style_for_all_reports')"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_0_document'" t-call="customized_invoice.SO_0_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_1_document'" t-call="customized_invoice.SO_1_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_2_document'" t-call="customized_invoice.SO_2_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_3_document'" t-call="customized_invoice.SO_3_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_4_document'" t-call="customized_invoice.SO_4_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_5_document'" t-call="customized_invoice.SO_5_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_6_document'" t-call="customized_invoice.SO_6_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_7_document'" t-call="customized_invoice.SO_7_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_8_document'" t-call="customized_invoice.SO_8_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_9_document'" t-call="customized_invoice.SO_9_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_10_document'" t-call="customized_invoice.SO_10_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_11_document'" t-call="customized_invoice.SO_11_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_13_document'" t-call="customized_invoice.SO_13_document" t-lang="lang"/>
                    <t t-if="style.template_so.key =='customized_invoice.SO_14_document'" t-call="customized_invoice.SO_14_document" t-lang="lang"/>
                    <t t-if="not style" t-call="sale.report_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
        <template id="report_saleorder_pro_forma">
            <t t-set="docs" t-value="docs.with_context(proforma=True)"/>
            <t t-set="is_pro_forma" t-value="True"/>
                <t t-call="web.report_layout">
                    <t t-foreach="docs" t-as="doc">
                        <t t-set="style" t-value="doc.style or res_company.df_style or user.env.ref('customized_invoice.df_style_for_all_reports')"/>
                        <t t-if="style.template_so.key == 'customized_invoice.SO_0_document'" t-call="customized_invoice.SO_0_document" t-lang="doc.partner_id.lang"/>
                        <t t-if="style.template_so.key == 'customized_invoice.SO_1_document'" t-call="customized_invoice.SO_1_document" t-lang="doc.partner_id.lang"/>
                        <t t-if="style.template_so.key == 'customized_invoice.SO_2_document'" t-call="customized_invoice.SO_2_document" t-lang="doc.partner_id.lang"/>
